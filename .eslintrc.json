{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "no-unused-vars": "warn"
    },
    "ignorePatterns": ["node_modules/**", "dist/**"]
}
